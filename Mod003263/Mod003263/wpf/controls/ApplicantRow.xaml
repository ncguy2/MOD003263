        <Grid Margin="58.333,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175*"/>
                <ColumnDefinition Width="237*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="usrName" Content="Label" VerticalAlignment="Top" Height="19.96" Margin="26.5,23.373,-26.5,0" FontSize="8"/>
            <Label x:Name="usrPosition" Content="Label" Margin="0,0,-22.173,21.623" Height="21.71" VerticalAlignment="Bottom" FontSize="8"/>
